<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="800" prefWidth="1000" xmlns:fx="http://javafx.com/fxml" fx:controller="fi.tira.pentominotiler.FXMLController">
    <children>
        <VBox layoutX="100" layoutY="100">
            <fx:define>
                <ToggleGroup fx:id="boardDims"/>
            </fx:define>
            <RadioButton text="(3, 20)" toggleGroup="$boardDims" fx:id="rb1" selected="true" />
            <RadioButton text="(4, 15)" toggleGroup="$boardDims" fx:id="rb2" />
            <RadioButton text="(5, 12)" toggleGroup="$boardDims" fx:id="rb3" />
            <RadioButton text="(6, 10)" toggleGroup="$boardDims" fx:id="rb4" />
            
            <!--<RadioButton layoutX="126" layoutY="100" fx:id="rb1" selected="true" text="Radio 1"></RadioButton>-->
            <Button layoutX="126" layoutY="190" text="Run search" onAction="#handleRunButton" fx:id="runButton" />
            <Label layoutX="126" layoutY="240" minHeight="16" minWidth="69" fx:id="label" />
        </VBox>
    </children>
</AnchorPane>
